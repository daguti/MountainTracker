<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

  <class name="MountainTracker.Beans.Coordinate" table="COORDINATES" catalog="MountainTracker">

  
      <id name="refCoordinate" column="REF_COORDINATE" type="int">
          <generator class="native" />
      </id>

      <property name="latitude" column="DISTANCE" type="double" />
      <property name="longitude" column="TOTAL_ASCEND" type="double" />
      <property name="elevation" column="TOTAL_DESCEND" type="double" />
      <many-to-one name="route" class="MountainTracker.Beans.Route" column="REF_ROUTE"/> 
    
  </class>

</hibernate-mapping>
