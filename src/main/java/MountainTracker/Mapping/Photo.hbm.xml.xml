<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

  <class name="MountainTracker.Beans.Coordinate" table="COORDINATES" catalog="MountainTracker">

  
      <id name="imageId" column="REF_IMAGE" type="int">
          <generator class="native" />
      </id>

      <property name="image" column="IMAGE" type="binary" />
      <property name="desription" column="DESCRIPTION" type="string" />
      <many-to-one name="user" class="MountainTracker.Beans.User" column="USERNAME"/> 
    
  </class>

</hibernate-mapping>
